<div class="alert alert-info" role="alert" n:inner-snippet="note">
        {if $isEditable && $editation }
            <form n:name="form" class="form-inline">
                {input note style=>"width:90%"}
                <button class="btn btn-sm btn-default ajax" n:name="save"><i class="fa fa-check"></i></button>
                <a class="btn btn-sm btn-default ajax" n:href="cancel!"><i class="fa fa-times"></i></a>
            </form>
        {else}
            <b>Pozn√°mka:</b> {$note|noescape} <a n:if="$isEditable" n:href="edit!" class="btn btn-xs btn-default ajax"><i class="fa fa-pencil"></i></a>
        {/if}
</div>
